<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".DeviceBedRoomActivity">


    <ImageButton
        android:id="@+id/btnBack"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:background="#00FFFFFF"
        android:src="@drawable/icon_back_arrow" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_device_bed_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/tab_rect"
        android:elevation="3dp"
        app:tabGravity="fill"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed"
        app:tabIndicatorGravity="center"
        app:tabBackground="@drawable/tab_selector"
        app:tabRippleColor="@null"
        app:tabTextAppearance="@style/tablayout"
        android:layout_below="@+id/btnBack"
        />


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_device_bed_room"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_layout_device_bed_room" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background">
    <com.example.afinal.custom_textView.RobotoBlackTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="User Account Setting"
        android:textColor="@color/white"
        android:background="@drawable/dialog_background_cornertop"
        android:gravity="center"
        android:textSize="25dp"/>
    <com.example.afinal.custom_textView.RobotoRegularTextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Please Change What You Want Only"
        android:textColor="@color/black"
        android:textSize="18dp" />
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">



            <EditText
                android:id="@+id/ed_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/dialog_background_border"
                android:gravity="center_vertical|start"
                android:padding="10dp"
                android:textSize="16dp"
                android:text=""
                android:hint="username"/>
            <EditText
                android:id="@+id/ed_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/dialog_background_border"
                android:gravity="center_vertical|start"
                android:padding="10dp"
                android:textSize="16dp"
                android:hint="password"/>
            <EditText
                android:id="@+id/ed_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/dialog_background_border"
                android:gravity="center_vertical|start"
                android:padding="10dp"
                android:textSize="16dp"
                android:hint="email"/>
            <EditText
                android:id="@+id/ed_phonenum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/dialog_background_border"
                android:gravity="center_vertical|start"
                android:padding="10dp"
                android:textSize="16dp"
                android:hint="phone number"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:padding="16dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_clear"
            android:layout_weight="1"
            android:text="Clear Change"
            android:textSize="20dp"
            android:textColor="#EFF5F5"
            android:background="@drawable/dialog_btn_background"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_apply"
            android:layout_weight="1"
            android:text="Apply Change"
            android:textSize="20dp"
            android:textColor="#EFF5F5"
            android:layout_marginLeft="10dp"
            android:background="@drawable/dialog_btn_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>